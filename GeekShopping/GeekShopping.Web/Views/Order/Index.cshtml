@model IEnumerable<GeekShopping.Web.Models.Order>
<br />
<br />
<div class="container p-4 border">
  <div class="row pb-2">
    <div class="col">
      <h1 class="text-primary">Orders List</h1>
    </div>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>Date</th>
        <th>Total Amount</th>
        <th>Products</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var order in Model)
      {
        <tr>
          <td>@order.DateTime.ToString("d 'de' MMMM", new System.Globalization.CultureInfo("pt-BR"))</td>
          <td>@string.Format("{0:c}", order.PurchaseAmount)</td>
          <td>
            @foreach(var product in order.OrderDetails)
            {
                <p>@product.ProductName | @string.Format("{0:c}", @product.Price) | @product.Count</p>
            }
          </td>
        </tr>
      }
    </tbody>
  </table>
</div>