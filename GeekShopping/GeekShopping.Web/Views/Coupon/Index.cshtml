@model IEnumerable<GeekShopping.Web.DTO.CouponDTO>

<br />
<br />
<div class="container p-4 border">
  <div class="row pb-2">
    <div class="col">
      <h1 class="text-primary">Coupons List</h1>
    </div>
    <div class="col text-end pt-1">
      <a asp-controller="Coupon" asp-action="Create" class="btn btn-outline-primary">
        <i class="fas fa-plus"></i> Create New Coupon
      </a>
    </div>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>Coupon Code</th>
        <th>Discount Amount</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var coupon in Model)
      {
        <tr>
          <td>@coupon.Code</td>
          <td>@((coupon.DiscountAmount).ToString("c"))</td>
          <td>
            <a asp-controller="Coupon" asp-action="Update" class="btn btn-success" asp-route-id="@coupon.Id">
              Edit
            </a>
            <form asp-controller="Coupon" asp-action="Delete" method="POST" class="d-inline">
              <input type="hidden" name="id" value="@coupon.Id" />
              <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this coupon?');">
                <i class="fas fa-trash"></i>
              </button>
            </form>
          </td>
        </tr>
      }
    </tbody>
  </table>
</div>